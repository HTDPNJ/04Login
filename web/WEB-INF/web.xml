<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--配置Servelet-->
    <!--配置Servlet类路径-->
    <servlet>
        <servlet-name>PageServelt</servlet-name>
        <servlet-class>com.hfut.servlet.PageServelt</servlet-class>
    </servlet>
    <!--配置访问方式-->
    <servlet-mapping>
        <servlet-name>PageServelt</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>

    <!--配置Servelet-->
    <!--配置Servlet类路径-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hfut.servlet.LoginServlet</servlet-class>
    </servlet>
    <!--配置访问方式-->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--配置Servelet-->
    <!--配置Servlet类路径-->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.hfut.servlet.MainServlet</servlet-class>
    </servlet>
    <!--配置访问方式-->
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!--配置Servelet-->
    <!--配置Servlet类路径-->
    <servlet>
        <servlet-name>CookieServlet</servlet-name>
        <servlet-class>com.hfut.servlet.CookieServlet</servlet-class>
    </servlet>
    <!--配置访问方式-->
    <servlet-mapping>
        <servlet-name>CookieServlet</servlet-name>
        <url-pattern>/ck</url-pattern>
    </servlet-mapping>

</web-app>